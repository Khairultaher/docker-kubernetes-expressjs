                                        span.card-text-label #{item.Artist}
                                    .col-9.card-bottom-left
                                        p.card-bottom-text #{item.Duration} | #{item.LabelName}
                                    .col-3.card-bottom-right
                                        a(href="#", style="float:right;")
                                            i.fa.fa-paper-plane.rotate-45-right
        .tab-pane.fade(id="podcast" role="tabpanel" aria-labelledby="podcast-tab")
            .p-2
                for item in podcastObj
                    .card.mb-2
                        .row.no-gutters
                            .col-5.col-md-2.col-lg-2
                                img.card-img(src=item.ImageUrl, alt="")
                            .col-7.col-md-10.col-lg-10
                                .card-body
                                    .col-12.card-body-header
                                        p.card-text #{item.Name}
                                        span.card-text-label #{item.Artist}
                                    .col-9.card-bottom-left
                                        p.card-bottom-text #{item.Duration} | #{item.LabelName}
                                    .col-3.card-bottom-right
                                        a(href="#", style="float:right;")
                                            i.fa.fa-paper-plane.rotate-45-right
        .tab-pane.fade(id="search" role="tabpanel" aria-labelledby="search-tab")
